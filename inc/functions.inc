if (!function_exists('hae_myyntilaskuja_joilla_avoin_saldo')) {

  function hae_myyntilaskuja_joilla_avoin_saldo($request, $valitut = false) {
    global $kukarow, $yhtiorow;

    $asiakas_join = "";
