if (!function_exists("pdf_fontfit")) {
  function pdf_fontfit($str, $len, $pdf, $param) {

    $ffok = 0;

    if ($pdf->strlen($str, $param) > $len) {

      for ($fkoko = $param["height"]; $fkoko >= 7; $fkoko--) {

        $param["height"] = $fkoko;

        if ($pdf->strlen($str, $param) <= $len) {
          $ffok = 1;
          break;
        }
      }
    }

    if (!$ffok) {
      $str = pdf_substr($str, $len, $pdf, $param);
    }

    return array($str, $param);
  }
}

