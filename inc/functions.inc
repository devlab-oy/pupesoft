      $eran_koko_pintaala_chk += (($tuoterow['pisin_sorttaus'] * $tuoterow['lyhin_sorttaus']) * $tuoterow['y_maara']);
      $eran_paino_chk += ($tuoterow['y_paino'] * $tuoterow['y_maara']);
    }

    return array(
      $inner_main_array,
      $pisin_tuote,
      $pisin_tuote_per_asiakas,
      $eran_koko_chk,
      $eran_koko_pintaala_chk,
      $eran_paino_chk,
      $tuoteres
    );
  }
}

