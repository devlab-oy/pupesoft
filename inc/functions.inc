      $purchaseorder_tuoteno = '';
      $purchaseorder_tilausnumero = '';

      // loopataan EDI
      foreach (explode("\n", $purchaseorder_data) as $tietue) {

        // t‰‰ on futurikeisi
        if (substr($tietue, 0, 1) != '*') {
          if (strpos($tietue, ":") !== FALSE) list($tunnus, $tieto)  = explode(':', $tietue);
        }
        else {
          $tunnus = $tietue;
          $tieto  = "";
