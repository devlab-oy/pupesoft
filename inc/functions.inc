  function search_array_min_with_key($array, $key) {
    $min_array = array_shift($array);
    $min_value = $min_array[$key];

    foreach($array as $a) {
      if ($a[$key] < $min_value) {
        $min_value = $a[$key];
        $min_array = $a;
      }
    }

    return $min_array;
  }
}

