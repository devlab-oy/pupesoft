  while ($row = mysql_fetch_assoc($vastaanottoraportti_result)) {

    if ($kala <= 40) {
      $pdf->draw_rectangle(695, 15, $kala+10, 580, $firstpage, $rectparam2);

      $firstpage = alku_vastaanotto();
      $kala = 685;
