if  (!function_exists('array_find_unique_values')) {
  function array_find_unique_values($array, $keys) {
    $result = array();
    foreach ($array as $a) {
      $array_temp2 = array();
      foreach ($keys as $k) {
        $array_temp2[$k] = $a[$k];
      }
      if (empty($result)) {
        array_push($result, $array_temp2);
      }
      else {
        $unique = true;
        foreach ($result as $a2) {
          $diff = array_diff_assoc($a2, $array_temp2);
          if (empty($diff)) {
            $unique = false;
          }
        }
        if ($unique) {
          array_push($result, $array_temp2);
        }
      }
    }

    return $result;
  }
}

