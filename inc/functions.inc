          $ale["ale{$alepostfix}"] = round($row["ale{$alepostfix}"], 2);
        }
      }
    }
    elseif ($tapa == 'plain') {
      $ale = 1;

      for ($alepostfix = 1; $alepostfix <= $maara; $alepostfix++) {
        $ale *= (1 - $row["ale{$alepostfix}"] / 100);
      }

      $ale *= (1 - $row["erikoisale"] / 100);
      $ale *= (1 - $row["erikoisale_saapuminen"] / 100);

      $ale = round((1 - $ale) * 100, 2);
    }
    elseif ($tapa == 'kerto') {
      $ale = 1;

      for ($alepostfix = 1; $alepostfix <= $maara; $alepostfix++) {
        $ale *= (1 - $row["ale{$alepostfix}"] / 100);
      }

      $ale *= (1 - $row["erikoisale"] / 100);
      $ale *= (1 - $row["erikoisale_saapuminen"] / 100);

      $ale = round($ale, 4);
    }

    return $ale;
  }
