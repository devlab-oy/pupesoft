        $kplvarasto++; // lasketaan montako tilausrivi‰ on viety varastoon
      }

      // jos kyseess‰ on saldollinen tuote
      if ($tuote['ei_saldoa'] == "") {
        //jos rivi on jo viety varastoon niin ei en‰‰ katota sen paikkaa
        if ($rivirow["kpl"] == 0 and $rivirow["varattu"] != 0) {
